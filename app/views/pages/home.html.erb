<%= link_to "Create your profile!", new_user_profile_path(current_user) if current_user %>

<div class="jumbotron text-center">
    <h1>Welcome to MyDevMatch</h1>
    <h3>A site where entrepreneurs can meet developers.</h3>
</div>
<div class="row">
    <div class="col-md-6">
        <div class="well">
            <div class="text-center">
                <h2>Basic Membership</h2>
                <h4>Sign up for free and have access to the community. <br/><br/></h4>
                <br/>
                <%= link_to "Sign Up for Basic" , new_user_registration_path(plan: @basic_plan.id), class: 'btn btn-primary btn-block btn-lg' %>
            </div>
        </div>
    </div>
        <div class="col-md-6">
            <div class="well">
                <div class="text-center">
                    <h2>Pro Membership</h2>
                    <h4>Sign up for the pro account for $10 and get access to the community and contact information!</h4>
                    <br/>
                    <%= link_to "Sign Up for Pro" , new_user_registration_path(plan: @pro_plan.id), class: 'btn btn-success btn-lg btn-block' %>
                </div>
            </div>
        </div>
    </div>
</div>
